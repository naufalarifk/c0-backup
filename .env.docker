# Docker Compose Environment Variables
# This file contains configuration for docker-compose.yml

# PostgreSQL Docker Configuration
POSTGRES_VERSION=16.6-alpine
POSTGRES_DB=gadain
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432
POSTGRES_CONTAINER_NAME=gadain-postgres

# Redis Configuration
REDIS_VERSION=7-alpine
REDIS_CONTAINER_NAME=gadain-redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password_here

# Health Check Configuration
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=10s
HEALTHCHECK_RETRIES=3
HEALTHCHECK_START_PERIOD=40s
