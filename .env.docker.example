# Docker Compose Environment Variables
# This file contains configuration for docker-compose.yml

# PostgreSQL Docker Configuration
POSTGRES_VERSION=17-alpine
POSTGRES_DB=cryptogadai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432
POSTGRES_CONTAINER_NAME=cryptogadai-postgres

# Redis Configuration
REDIS_VERSION=8-alpine
REDIS_CONTAINER_NAME=cryptogadai-redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Health Check Configuration
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=10s
HEALTHCHECK_RETRIES=3
HEALTHCHECK_START_PERIOD=40s

# Mailpit for Local Email Testing
MAILPIT_VERSION=v1.27.7
MAILPIT_SMTP_PORT=1025
MAILPIT_HTTP_PORT=8025
MAILPIT_CONTAINER_NAME=cryptogadai-mailpit
