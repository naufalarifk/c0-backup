# Loan Matcher Configuration
# These environment variables control the loan matching scheduler behavior

# Enable/disable the loan matcher scheduler (default: true)
LOAN_MATCHER_SCHEDULER_ENABLED=true

# Cron schedule for loan matching (default: "0 * * * *" = every hour at minute 0)
# Examples:
#   "0 * * * *"    = Every hour at minute 0
#   "0 */2 * * *"  = Every 2 hours
#   "0 0 * * *"    = Daily at midnight
#   "*/15 * * * *" = Every 15 minutes
LOAN_MATCHER_CRON_SCHEDULE=0 * * * *

# Run loan matching on module initialization (default: false)
# Set to true for testing purposes
LOAN_MATCHER_RUN_ON_INIT=false

# Maximum batch size for processing applications (default: 50)
LOAN_MATCHER_BATCH_SIZE=50

# Maximum total applications to process in one run (default: 1000)
LOAN_MATCHER_MAX_TOTAL_PROCESSED=1000
